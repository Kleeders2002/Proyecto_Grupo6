kind: Template
apiVersion: v1
metadata:
  name: drupal-template
  annotations:
    description: "Plantilla de despliegue para Drupal y PostgreSQL en OKD"
    tags: "drupal,postgresql"
    openshift.io/documentation-url: "https://github.com/Kleeders2002/Proyecto_Grupo6"
    openshift.io/support-url: "https://github.com/Kleeders2002/Proyecto_Grupo6"

parameters:
  - name: APP_NAME
    description: "Nombre de la aplicación (Prefijo de todos los objetos)."
    required: true

  - name: DOMAIN_NAME
    description: "Nombre de dominio para la publicación de la ruta."
    required: true

  - name: POSTGRES_USER
    description: "Nombre de usuario para conexión a la base de datos."
    value: "drupal"

  - name: POSTGRES_PASSWORD
    description: "Contraseña de usuario para conexión a la base de datos."
    required: true

  - name: POSTGRES_DB
    description: "Nombre de la base de datos."
    value: "drupal"

objects:
  - kind: Secret
    apiVersion: v1
    metadata:
      name: "${APP_NAME}-keys"
    type: Opaque
    stringData:
      POSTGRES_USER: '${POSTGRES_USER}'
      POSTGRES_PASSWORD: '${POSTGRES_PASSWORD}'
      POSTGRES_DB: '${POSTGRES_DB}'

  - apiVersion: route.openshift.io/v1
    kind: Route
    metadata:
      labels:
        app: ${APP_NAME}-appserver
      name: ${APP_NAME}-appserver
    spec:
      host: ${DOMAIN_NAME}
      port:
        targetPort: http
      to:
        kind: Service
        name: ${APP_NAME}-appserver
      wildcardPolicy: None

  - apiVersion: v1
    kind: Service
    metadata:
      name: '${APP_NAME}-pgsql'
    spec:
      ports:
        - name: postgresql
          port: 5432
          protocol: TCP
          targetPort: 5432
      selector:
        app: '${APP_NAME}-pgsql'

  - apiVersion: apps.openshift.io/v1
    kind: DeploymentConfig
    metadata:
      name: '${APP_NAME}-pgsql'
    spec:
      replicas: 1
      selector:
        app: '${APP_NAME}-pgsql'
      template:
        metadata:
          labels:
            app: '${APP_NAME}-pgsql'
        spec:
          containers:
            - name: postgresql
              image: postgres:latest
              env:
                - name: POSTGRES_USER
                  valueFrom:
                    secretKeyRef:
                      name: "${APP_NAME}-keys"
                      key: POSTGRES_USER
                - name: POSTGRES_PASSWORD
                  valueFrom:
                    secretKeyRef:
                      name: "${APP_NAME}-keys"
                      key: POSTGRES_PASSWORD
                - name: POSTGRES_DB
                  valueFrom:
                    secretKeyRef:
                      name: "${APP_NAME}-keys"
                      key: POSTGRES_DB
              ports:
                - containerPort: 5432
              resources:
                limits:
                  memory: "256M"
                requests:
                  memory: "256M"
              volumeMounts:
                - mountPath: /var/lib/postgresql/data
                  name: postgresql-data
          volumes:
            - name: postgresql-data
              emptyDir: {}

  - apiVersion: apps.openshift.io/v1
    kind: DeploymentConfig
    metadata:
      name: "${APP_NAME}-appserver"
    spec:
      replicas: 1
      selector:
        app: "${APP_NAME}-appserver"
      template:
        metadata:
          labels:
            app: "${APP_NAME}-appserver"
        spec:
          containers:
            - name: appserver
              image: drupal:latest
              env:
                - name: POSTGRES_HOST
                  value: ${APP_NAME}-pgsql
                - name: POSTGRES_USER
                  valueFrom:
                    secretKeyRef:
                      name: "${APP_NAME}-keys"
                      key: POSTGRES_USER
                - name: POSTGRES_PASSWORD
                  valueFrom:
                    secretKeyRef:
                      name: "${APP_NAME}-keys"
                      key: POSTGRES_PASSWORD
                - name: POSTGRES_DB
                  valueFrom:
                    secretKeyRef:
                      name: "${APP_NAME}-keys"
                      key: POSTGRES_DB
              ports:
                - containerPort: 8080
              resources:
                limits:
                  memory: "256M"
                requests:
                  memory: "256M"
              volumeMounts:
                - mountPath: /var/www/html/modules
                  name: drupal-modules
                - mountPath: /var/www/html/profiles
                  name: drupal-profiles
                - mountPath: /var/www/html/themes
                  name: drupal-themes
                - mountPath: /var/www/html/sites
                  name: drupal-sites
          volumes:
            - name: drupal-modules
              emptyDir: {}
            - name: drupal-profiles
              emptyDir: {}
            - name: drupal-themes
              emptyDir: {}
            - name: drupal-sites
              emptyDir: {}
